#!/bin/bash

set -e

RUBY_V=$(ruby -v)

function reset_gemfile_and_run {
  rm Gemfile.lock

  eval "$1 bundle update"
  eval "$1 bundle exec rake test"
}

function run_with_activerecord {
  reset_gemfile_and_run "ACTIVERECORD_VERSION=$1"
}

RUBY_2_2345="ruby 2.[2345]."
RUBY_2_567="ruby 2.[567]."
RUBY_3_x="ruby 3.0."

if [[ $RUBY_V =~ $RUBY_2_2345 ]]; then
  reset_gemfile_and_run

  if [[ $RUBY_V =~ "ruby 2.2." ]]; then
    run_with_activerecord "3.2"
  fi

  run_with_activerecord "4.0"
  run_with_activerecord "4.1"
  run_with_activerecord "4.2"
  run_with_activerecord "5.0"
  run_with_activerecord "5.1"
  run_with_activerecord "5.2"
fi

if [[ $RUBY_V =~ $RUBY_2_567 ]] || [[ $RUBY_V =~ $RUBY_3_x ]]; then
  gem install bundler -v ">= 2" --no-doc

  reset_gemfile_and_run

  run_with_activerecord "6.0"
  run_with_activerecord "6.1"
fi
